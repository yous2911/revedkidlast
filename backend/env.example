# Environment Configuration for RevEd Kids Backend
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
PORT=3000

# Database Configuration (Required)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=reved_kids

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_change_in_production_minimum_32_chars

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Security Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=10

# Performance Settings
CACHE_TTL_SECONDS=3600
MAX_REQUEST_SIZE=10mb

# Development Settings (only for development)
DB_SYNC=true
DB_FORCE_SYNC=false
ENABLE_CORS=true

# Production Settings (override in production)
# NODE_ENV=production
# DB_SSL=true
# REDIS_URL=redis://your-production-redis-url
# JWT_SECRET=your_production_jwt_secret_very_long_and_secure
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=50
# CACHE_TTL_SECONDS=7200 