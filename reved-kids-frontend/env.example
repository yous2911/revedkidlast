# RevEd Kids Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_API_TIMEOUT=10000

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable features
REACT_APP_ENABLE_SOUND=true
REACT_APP_ENABLE_HAPTIC=true
REACT_APP_ENABLE_ANIMATIONS=true
REACT_APP_ENABLE_OFFLINE=true
REACT_APP_ENABLE_PWA=true

# =============================================================================
# Analytics & Monitoring
# =============================================================================

# Google Analytics
REACT_APP_GA_TRACKING_ID=GA_TRACKING_ID_HERE

# Sentry Error Tracking
REACT_APP_SENTRY_DSN=SENTRY_DSN_HERE
REACT_APP_SENTRY_ENVIRONMENT=development

# =============================================================================
# External Services
# =============================================================================

# CDN for static assets
REACT_APP_CDN_URL=https://cdn.revedkids.com

# Image optimization service
REACT_APP_IMAGE_OPTIMIZATION_URL=https://images.revedkids.com

# =============================================================================
# Development & Testing
# =============================================================================

# Development mode
REACT_APP_DEV_MODE=true
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_MOCK_DATA=false

# Testing
REACT_APP_TEST_MODE=false
REACT_APP_ENABLE_TEST_SOUNDS=false

# =============================================================================
# Performance & Optimization
# =============================================================================

# Bundle analyzer
REACT_APP_BUNDLE_ANALYZER=false

# Performance monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# Security
# =============================================================================

# Content Security Policy
REACT_APP_CSP_NONCE=your-nonce-here

# API Key (if needed)
REACT_APP_API_KEY=your-api-key-here

# =============================================================================
# Localization
# =============================================================================

# Default language
REACT_APP_DEFAULT_LOCALE=en
REACT_APP_SUPPORTED_LOCALES=en,fr,es

# =============================================================================
# Sound Configuration
# =============================================================================

# Sound settings
REACT_APP_DEFAULT_SOUND_VOLUME=0.7
REACT_APP_DEFAULT_HAPTIC_INTENSITY=1.0
REACT_APP_ENABLE_AUTOPLAY_SOUNDS=false

# =============================================================================
# Educational Content
# =============================================================================

# Content API
REACT_APP_CONTENT_API_URL=https://content.revedkids.com
REACT_APP_EXERCISE_API_URL=https://exercises.revedkids.com

# =============================================================================
# Deployment
# =============================================================================

# Build configuration
REACT_APP_BUILD_VERSION=1.0.0
REACT_APP_BUILD_DATE=2024-01-01

# Deployment environment
REACT_APP_DEPLOYMENT_ENV=development
REACT_APP_DEPLOYMENT_REGION=us-east-1

# =============================================================================
# Third-party Integrations
# =============================================================================

# Payment processing (if applicable)
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_your_stripe_key_here

# Social media
REACT_APP_FACEBOOK_APP_ID=your_facebook_app_id
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id

# =============================================================================
# Advanced Configuration
# =============================================================================

# Cache settings
REACT_APP_CACHE_DURATION=3600
REACT_APP_MAX_CACHE_SIZE=50

# Network settings
REACT_APP_REQUEST_RETRY_ATTEMPTS=3
REACT_APP_REQUEST_RETRY_DELAY=1000

# Animation settings
REACT_APP_ANIMATION_DURATION=300
REACT_APP_ENABLE_REDUCED_MOTION=false 